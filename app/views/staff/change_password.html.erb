<% content_for :title, 'Change Staff Password | SIPERAN' %>

<main class="admin-recover-page">
  <div class="container">
    <h1 class="dark-primary-color-fg title">
      <%= t 'app.title' %>
      <sup class="version">
        v<%= t 'app.version' %>
      </sup>
    </h1>
    <h2 class="subtitle">
      changing staff password
    </h2>

    <%= form_with scope: :staff, url: :staff_change_password_validation, local: true do |form| %>
      <div class="row">
        <div class="col-sm-2">
          <%= fa_icon 'key', class: 'custom-key' %>
        </div>
        <div class="col-sm-10">
          <%= form.password_field :password, placeholder: 'Password', autofocus: 'true' %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-2">
          <%= fa_icon 'key', class: 'custom-key' %>
        </div>
        <div class="col-sm-10">
          <%= form.password_field :password_confirmation, placeholder: 'Password Confirmation', autofocus: 'true' %>
        </div>
      </div>
      <div class="row">
        <input class="dark-primary-color-bg" type="submit" value="Change Password">
      </div>

      <% if @staff and @staff.errors.any? %>
        <div class="error-message">
          <h2>Error occurred:</h2>
          <ul>
            <% @staff.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
    <% end %>

    <div class="links">
      <div class="forgot-password">
        Don't want to?
        Back to <a href="/staff/dashboard/">dashboard</a>.
      </div>
    </div>
  </div>
</main>

<footer class="single-page">
  <%= render 'partial/footer' %>
</footer>

